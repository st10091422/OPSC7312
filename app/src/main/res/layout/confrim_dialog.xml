<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="20dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout?"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/teal_900" />


    <!-- Message Text -->
    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to delete \nthis logout?"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_semibold" />


    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="80dp">

        <!-- Cancel Button -->
        <LinearLayout
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/cancel_button_background"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/btnConfirmTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_confirm"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"/>
        </LinearLayout>

        <!-- Confirm Button -->
        <LinearLayout
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center"
            style="@style/btnSolidRounded_1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel_lbl"
                android:textSize="16sp"
                android:textColor="@color/teal_900"
                android:fontFamily="@font/poppins_semibold"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>