<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ProfileFragment"
    android:orientation="vertical"
    style="@style/groupStyledeep_orange_400">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/white"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_gravity="start"
            />

        <TextView
            android:id="@+id/txtWelcome"
            style="@style/txtPoppinssemibold30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:ellipsize="end"

            android:lineSpacingExtra="15dp"
            android:singleLine="true"
            android:text="@string/lbl_profile"
            tools:text="@string/lbl_profile" />
    </Toolbar>

    <LinearLayout
        android:id="@+id/linearColumnusernameo"
        style="@style/groupStylewhite_A700cornerRadius"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:orientation="vertical"
        android:paddingStart="36dp"
        android:paddingTop="20dp"
        android:paddingEnd="36dp"
        android:paddingBottom="20dp"
        >
        <TextView
            android:id="@+id/txtUsernameor"
            style="@style/txtPoppinsmedium15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/msg_username_or_email"
            tools:text="@string/msg_username_or_email" />

        <EditText
            android:id="@+id/etEmail"
            style="@style/etSolidRounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_bg_red_50_radius_18"
            android:ellipsize="end"
            android:hint="@string/enter_email"
            android:inputType="text"
            android:lineSpacingExtra="8dp"
            android:paddingStart="30dp"
            android:paddingTop="8dp"
            android:paddingEnd="30dp"
            android:paddingBottom="8dp"
            android:singleLine="true"
            android:textColorHint="@color/blue_gray_900_83"
            tools:ignore="Autofill" />

        <LinearLayout
            android:id="@+id/linearColumnpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPassword"
                style="@style/txtPoppinsmedium15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/enter_username"
                tools:text="@string/enter_username" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etUsername"
                style="@style/etSolidRounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/rectangle_bg_red_50_radius_18"
                android:ellipsize="end"
                android:hint="@string/enter_username"
                android:lineSpacingExtra="8dp"
                android:paddingStart="30dp"
                android:paddingTop="8dp"
                android:paddingEnd="30dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:inputType="text"
                android:textColorHint="@color/blue_gray_900_83"
                tools:ignore="Autofill" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            style="@style/btnSolidRounded"
            android:layout_width="207dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="91dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:paddingEnd="30dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:text="@string/lbl_update_profile"
            android:textAllCaps="false"
            tools:text="@string/lbl_update_profile" />

    </LinearLayout>
</LinearLayout>